@model TemroMastemar.Models.TakenLiterature

@{
    ViewData["Title"] = "የሥነ ፅሁፍ ወሳጆች ቅፅ";
    var type = ViewData["litType"] as TemroMastemar.Models.Literature;
}

<h1>የሥነ ፅሁፍ ወሳጆች ቅፅ</h1>
<hr />


<div class="container">
    <form asp-action="AddorEdit" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="col-3"></div>
            <div class="col-6">
                <div class="form-group">
                    <label asp-for="TL_Reason" class="control-label"></label>
                    <span class="text-danger">*</span>
                    <input asp-for="TL_Reason" class="form-control" id="tl_r"/>
                    <span asp-validation-for="TL_Reason" class="text-danger"></span>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.TL_Title, htmlAttributes: new { @class = "control-label" })
                    <span class="text-danger">*</span>
                    <div class="col-md-12 mt-2 dropdown">
                        @Html.DropDownListFor(model => model.TL_Title,ViewBag.litTitle as  SelectList,"ርዕስ ይምረጡ", htmlAttributes: new {@class = "form-contol btn btn-light w-100", @id="editable3", @data_live_search="true"})
                    </div>
                    <span asp-validation-for="TL_Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.TL_LiteratureType, htmlAttributes: new { @class = "control-label" })
                    <span class="text-danger">*</span>
                    <div class="col-md-12 mt-2 dropdown btn btn-light">
                        @Html.DropDownListFor(model => model.TL_LiteratureType,ViewBag.litType as SelectList,"ዓይነት ይምረጡ", htmlAttributes: new {@class = "dropdown-item form-contol", @id = "typeLit"})
                    </div>
                    <span asp-validation-for="TL_LiteratureType" class="text-danger"></span>

                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Giver, htmlAttributes: new { @class = "control-label" })
                    <span class="text-danger">*</span>
                    <div class="col-md-12 mt-2 dropdown">
                        @Html.DropDownListFor(model => model.Giver,ViewBag.givName as SelectList,"ስም ይምረጡ", htmlAttributes: new {@class = "form-contol btn btn-light w-100", @id="editable1", @data_live_search="true"})
                    </div>
                    <span asp-validation-for="Giver" class="text-danger"></span>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Taker, htmlAttributes: new { @class = "control-label" })
                    <span class="text-danger">*</span>
                    <div class="col-md-12 mt-2 dropdown ">
                        @Html.DropDownListFor(model => model.Taker,ViewBag.takName as SelectList,"ስም ይምረጡ", htmlAttributes: new {@class = "form-contol btn btn-light w-100", @id="editable2", @data_live_search="true"})
                    </div>
                    <span asp-validation-for="Taker" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-3"></div>
                <div class="col-5  mt-5 mb-5">
                    <div class="form-group">
                        <input type="submit" value="አስገባ" class="btn btn-primary" id="submit"/>
                    </div>
                </div>
                <div class="col-4  mt-5 mb-5">
                    <a asp-action="Index" class="btn btn-secondary" onClick="history.go(-1); return false;">ተመለስ</a>
                </div>
            </div>
        </div>
    </form>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/css/bootstrap-select.min.css">




    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.3/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/js/bootstrap-select.min.js"></script>




    <script>
        $(document).ready(function() {
            $('#editable1').selectpicker();
            $('#editable2').selectpicker();
            $('#editable3').selectpicker();
        });

    </script>
    }
