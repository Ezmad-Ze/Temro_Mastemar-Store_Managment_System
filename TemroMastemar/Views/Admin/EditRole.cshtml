@model TemroMastemar.ViewModel.EditRoleViewModel

@{
    ViewData["Title"] = "Edit role";
}

<h1>Edit role</h1>

<form method="post" class="row">
    <div class="mt-3 col-4">
        <div class="form-group row">
            <label asp-for="Id" class="col-form-label col-2"></label>
            <input asp-for="Id" disabled class="form-control col-9 p-1 text-center" style="font-size: 0.9em" />
        </div>
        <div class="form-group row">
            <label asp-for="RoleName" class="col-form-label col-2"></label>
            <input asp-for="RoleName" class="form-control col-9 p-2" />
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <div class="row mt-3">
                <div class="col"><button type="submit" class="btn btn-success float-right mr-3">አስተካክል</button></div>
                <div class="col"><a asp-action="ListAllRoles" class="btn btn-secondary">ተመለስ</a></div>
            </div>

        </div>
    </div>
    <div class="col-1"></div>
    <div class="col-5">
        <h3>ሰዎች @Model.RoleName ኃላፊነት</h3>

        <table class="table table-striped col-8">
            <tr></tr>
            @if (Model.Users.Any())
            {
                foreach (var user in Model.Users)
                {
                    <tr>
                        <td class="form-label">@user</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td class="form-label">@Model.RoleName ስር ስዎች የሉም</td>
                </tr>
            }
        </table>
        <div>
            <a asp-action="EditUsersInRole" asp-route-id="@Model.Id" class="btn btn-primary">ከዚህ ኃላፊነት ሰዎችን አስገባ/አስወጣ</a>
        </div>
    </div>
</form>
