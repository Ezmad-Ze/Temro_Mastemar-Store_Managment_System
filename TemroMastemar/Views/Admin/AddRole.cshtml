@model TemroMastemar.ViewModel.AddRoleViewModel

@{
    ViewData["Title"] = "ኃላፊነት አስገባ";
}


<h1>ኃላፊነት አስገባ</h1>

<form asp-action="AddRole" method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="RoleName" class="col-1 col-form-label"></label>
        <div>
            <input asp-for="RoleName" placeholder="የኃላፊነት ስም" />
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group col-4">
        <div class="row mt-3">
            <div class="col"><button type="submit" class="btn btn-primary">አስገባ</button></div>
            <div class="col"><a asp-action="ListAllRoles" class="btn btn-secondary">ተመለስ</a></div>
        </div>
    </div>
</form>