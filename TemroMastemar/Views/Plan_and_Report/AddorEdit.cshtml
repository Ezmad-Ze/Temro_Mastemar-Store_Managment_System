@model TemroMastemar.Models.Plan_and_Report

@{
    ViewData["Title"] = Model.ID == 0 ? "አዲስ የዘገባዎችና የእቅዶች ማስገቢያ" : "ነባር የዘገባዎችና የእቅዶች ማደሻ";
}

<h1>የዘገባዎችና የእቅዶች ቅፅ</h1>

<hr />

<div class="container">
    <form asp-action="AddorEdit" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" name="ID" value="@Model.ID" />
        <input type="hidden" asp-for="Document" name="Document" />
        <div class="row">
            <div class="col-3"></div>
            <div class="col-6">
                <div class="form-group mt-3">
                    @Html.LabelFor(model => model.Plan_or_Report, htmlAttributes: new { @class = "control-label" })
                    <span class="text-danger">*</span>
                    <div class="col-md-12 mt-2 dropdown btn btn-light">
                        @Html.DropDownListFor(model => model.Plan_or_Report,new SelectList(ViewBag.plan_or_reports),"ዓይነት ይምረጡ", htmlAttributes: new {@class = "dropdown-item form-contol"})
                    </div>
                    <span asp-validation-for="Plan_or_Report" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Title" class="control-label"></label>
                    <span class="text-danger">*</span>
                    <input asp-for="Title" class="form-control" autocomplete="off" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    @Html.LabelFor(model => model.Type, htmlAttributes: new { @class = "control-label" })
                    <span class="text-danger">*</span>
                    <div class="col-md-12 mt-2 dropdown btn btn-light">
                        @Html.DropDownListFor(model => model.Type,new SelectList(ViewBag.types),"ዓይነት ይምረጡ", htmlAttributes: new {@class = "dropdown-item form-contol"})
                    </div>
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>
                <div class="row">
                        <p>መነሻ</p>
                    <div class="col-4">
                        <div class="form-group mt-3">
                            <label asp-for="S_ReportDate" class="control-label"></label>
                            <input asp-for="S_ReportDate" class="form-control" />
                            <span asp-validation-for="S_ReportDate" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="form-group mt-3">
                            <label asp-for="S_ReportMonth" class="control-label"></label>
                            <span class="text-danger">*</span>
                            <input asp-for="S_ReportMonth" class="form-control" />
                            <span asp-validation-for="S_ReportMonth" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="form-group mt-3">
                            <label asp-for="S_ReportYear" class="control-label"></label>
                            <span class="text-danger">*</span>
                            <input asp-for="S_ReportYear" class="form-control" />
                            <span asp-validation-for="S_ReportYear" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <p>መነሻ</p>
                    <div class="col-4">
                        <div class="form-group mt-3">
                            <label asp-for="E_ReportDate" class="control-label"></label>
                            <input asp-for="E_ReportDate" class="form-control" />
                            <span asp-validation-for="E_ReportDate" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="form-group mt-3">
                            <label asp-for="E_ReportMonth" class="control-label"></label>
                            <span class="text-danger">*</span>
                            <input asp-for="E_ReportMonth" class="form-control" />
                            <span asp-validation-for="E_ReportMonth" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="form-group mt-3">
                            <label asp-for="E_ReportYear" class="control-label"></label>
                            <span class="text-danger">*</span>
                            <input asp-for="E_ReportYear" class="form-control" />
                            <span asp-validation-for="E_ReportYear" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group mt-3">
                    @Html.LabelFor(model => model.ReportBy, htmlAttributes: new { @class = "control-label" })
                    <span class="text-danger">*</span>
                    <div class="col-md-12 mt-2 dropdown btn btn-light">
                        @Html.DropDownListFor(model => model.ReportBy,new SelectList(ViewBag.writtenBy),"የፃፈው አካል ይምረጡ", htmlAttributes: new {@class = "dropdown-item form-contol"})
                    </div>
                    <span asp-validation-for="ReportBy" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <label asp-for="Physical_Document" class="control-label"></label>
                    <span class="text-danger">*</span>
                    <input asp-for="Physical_Document" class="form-control" autocomplete="off" />
                    <span asp-validation-for="Physical_Document" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <label asp-for="File" class="control-label"></label>
                    <span class="text-danger">*</span>
                    <input asp-for="File" accept=".pdf" id="fileupload" name="File" class="form-control mt-2" />
                    <span asp-validation-for="File" class="text-danger"></span>
                </div>
                @if (@Model.ID != 0)
                {
                    <iframe src="~/Plan_and_Report/@Model.Document#toolbar=0&navpanes=0" asp-append-version="true" width="100%" height="500px" class="mt-3"></iframe>

                }
            </div>
            <div class="row">
                <div class="col-3"></div>
                <div class="col-5  mt-5 mb-5">
                    <div class="form-group">
                        <input type="submit" value="አስገባ" class="btn btn-primary" />
                    </div>
                </div>
                <div class="col-4  mt-5 mb-5">
                    <a asp-action="Index" class="btn btn-secondary">ተመለስ</a>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/css/bootstrap-select.min.css">
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.3/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/js/bootstrap-select.min.js"></script>


    <script>
        $(document).ready(function() {
            $('#editable').selectpicker();
        })
    </script>

}

