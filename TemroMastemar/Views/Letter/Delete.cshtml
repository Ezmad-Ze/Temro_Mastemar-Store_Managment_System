@model TemroMastemar.Models.Letter

@{
    ViewData["Title"] = "ማስወገጃ ገፅ";
}

<h2>ማስወገጃ ቅፅ</h2>
<hr/>
<div class="container">
    <div class="row">
        <div class="col-2"></div>
        <div class="col-8">
            <iframe src="~/Letter/@Model.Document#toolbar=0&navpanes=0" asp-append-version="true" width="100%" height="500px" class="mt-3"></iframe>
        </div>
        <div class="col-2"></div>
    </div>


    <div class="row mt-4 mb-4">
        <div class="col-1"></div>
        <div class="col-9">
            <div>
                <form asp-action="Delete">
                    <input type="hidden" asp-for="LetterID" />
                    <input type="submit" value="አስወግድ" class="btn btn-danger" onclick="return confirm('ይህን ቅፅ ለማስወገድ እርግጠኛ ነዎት?')" />
                </form>
            </div>
        </div>
        <div class="col-2">
            <a asp-action="Index" class="btn btn-secondary">ተመለስ</a>
        </div>
    </div>
</div>