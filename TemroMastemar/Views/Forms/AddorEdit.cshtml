@model TemroMastemar.Models.Form

@{
    ViewData["Title"] = Model.FormID == 0 ? "አዲስ ቅፆች ማስገቢያ" : "ነባር ቅፆች ማደሻ";
}

<h1>የቅፆች ማስቀምጫ ቅፅ</h1>

<hr />

<div class="container">
    <form asp-action="AddorEdit" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" name="FormID" value="@Model.FormID" />
        <input type="hidden" asp-for="Document" name="Document" />
        <div class="row">
            <div class="col-3"></div>
            <div class="col-6">
                <div class="form-group">
                    <label asp-for="FormTitle" class="control-label"></label>
                    <span class="text-danger">*</span>
                    <input asp-for="FormTitle" class="form-control" autocomplete="off" />
                    <span asp-validation-for="FormTitle" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="col-4">
                        <div class="form-group mt-3">
                            <label asp-for="FormDate" class="control-label"></label>
                            <input asp-for="FormDate" class="form-control" />
                            <span asp-validation-for="FormDate" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="form-group mt-3">
                            <label asp-for="FormMonth" class="control-label"></label>
                            <span class="text-danger">*</span>
                            <input asp-for="FormMonth" class="form-control" />
                            <span asp-validation-for="FormMonth" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="form-group mt-3">
                            <label asp-for="FormYear" class="control-label"></label>
                            <span class="text-danger">*</span>
                            <input asp-for="FormYear" class="form-control" />
                            <span asp-validation-for="FormYear" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group mt-3">
                    @Html.LabelFor(model => model.FormBy, htmlAttributes: new { @class = "control-label" })
                    <div class="col-md-12 mt-2 dropdown btn btn-light">
                        @Html.DropDownListFor(model => model.FormBy,new SelectList(ViewBag.writtenBy),"የፃፈው አካል ይምረጡ", htmlAttributes: new {@class = "dropdown-item form-contol"})
                    </div>
                    <span asp-validation-for="FormBy" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <label asp-for="Physical_Document" class="control-label"></label>
                    <span class="text-danger">*</span>
                    <input asp-for="Physical_Document" class="form-control" />
                    <span asp-validation-for="Physical_Document" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <label asp-for="FormFile" class="control-label"></label>
                    <span class="text-danger">*</span>
                    <input asp-for="FormFile" accept=".pdf" id="fileupload" name="FormFile" class="form-control mt-2" />
                    <span asp-validation-for="FormFile" class="text-danger"></span>
                </div>
                @if (@Model.FormID != 0)
                {
                    <iframe src="~/Form/@Model.Document#toolbar=0&navpanes=0" asp-append-version="true" width="100%" height="500px" class="mt-3"></iframe>

                }
            </div>
            <div class="row">
                <div class="col-3"></div>
                <div class="col-5  mt-5 mb-5">
                    <div class="form-group">
                        <input type="submit" value="አስገባ" class="btn btn-primary" />
                    </div>
                </div>
                <div class="col-4  mt-5 mb-5">
                    <a asp-action="Index" class="btn btn-secondary">ተመለስ</a>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/css/bootstrap-select.min.css">
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.3/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/js/bootstrap-select.min.js"></script>


    <script>
        $(document).ready(function() {
            $('#editable').selectpicker();
        })
    </script>

}